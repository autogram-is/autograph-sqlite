{
  "name": "@autogram/autograph-sqlite",
  "version": "0.0.1",
  "description": "Sqlite backend for Autograph, the graphlike data store.",
  "exports": "./dist/source/index.js",
  "types": "./dist/source/index.d.ts",
  "type": "module",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "clean": "shx rm -rf ./dist; ava reset-cache",
    "nuke": "npm run clean; rm -rf ./node_modules; rm package-lock.json; npm install",
    "test": "ava",
    "lint": "xo",
    "fix": "xo --fix",
    "compile": "tsc",
    "prepare": "run-s clean compile",
    "pretest": "run-s clean compile",
    "posttest": "npm run lint"
  },
  "files": [
    "dist/source/**/*"
  ],
  "xo": {
    "space": true,
    "prettier": true,
    "bracketSpacing": true
  },
  "prettier": {
    "editorconfig": true,
    "semi": true,
    "singleQuote": false,
    "indent_style": "space",
    "indent_size": 2,
    "bracketSpacing": true
  },
  "ava": {
    "files": [
      "tests/**/*",
      "!tests/fixtures"
    ],
    "typescript": {
      "rewritePaths": {
        "tests/": "dist/tests/"
      },
      "compile": false
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/autogram-is/autograph-sqlite.git"
  },
  "keywords": [
    "graph",
    "nodejs",
    "typescript"
  ],
  "author": "Jeff Eaton <jeff@autogram.is> (http://autogram.is/eaton/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/autogram-is/autograph-sqlite/issues"
  },
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@types/node": "^14.11.2",
    "ava": "^4.3.1",
    "concurrently": "^7.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "shx": "^0.3.4",
    "typescript": "^4.7.4",
    "xo": "^0.51.0"
  },
  "dependencies": {
    "@autogram/autograph": "github:autogram-is/autograph#main",
    "@sindresorhus/is": "^5.3.0",
    "@types/better-sqlite3": "^7.6.0",
    "better-sqlite3": "^7.6.2"
  }
}
